{
  "name": "boilgen",
  "displayName": "Boilgen",
  "description": "Powerful code generator for VS Code that creates component folders, files and structures from custom JSON templates. Right-click, choose a template, type a name â€“ and you're done.",
  "version": "0.1.0",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ShervudS/boilgen"
  },
  "publisher": "Boilgen",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "boilgen.generateFromTemplate",
        "title": "Boilgen: Create from Template"
      }
    ],
    "keybindings": [
      {
        "command": "boilgen.generateFromTemplate",
        "key": "ctrl+alt+n",
        "when": "explorerViewletVisible && filesExplorerFocus"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "boilgen.generateFromTemplate",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Boilgen",
      "properties": {
        "boilgen.templatesPath": {
          "type": "string",
          "default": ".vscode/boilgen.templates.json",
          "description": "Path to the JSON file with templates"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --fix",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "esbuild": "^0.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
